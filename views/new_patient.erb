
<h2><u>Add Patient</u></h2>

<form action="/new-patient" method="post">
  <div class="form-group">
    <label for="patient_name">Enter Patient's name: </label>
    <input type="text" name="patient_name" class="form-control">
  </div>
  <div class="form-group">
    <label for="birthdate">Patient Birthdate: </label>
    <input type="date" name="birthdate" class="form-control">
  </div>
  <div class="form-group">
    <label for="doc_id">Doctor ID: </label>
    <input type="number" name="doc_id" class="form-control">
  </div>
  <button type="submit" class="btn btn-info">Add</button>
</form>

<br>
<a href="/" class="btn btn-danger">Back</a>
<br>
<br>
<h3> <a href="<%= @patient_name %>"><%= @patient_name %></a></h3>
